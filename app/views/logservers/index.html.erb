<h1>Listing logservers</h1>

<table>
  <thead>
    <tr>
      <th>Ip</th>
      <th>Hostname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logservers.each do |logserver| %>
      <tr>
        <td><%= logserver.ip %></td>
        <td><%= logserver.hostname %></td>
        <td><%= link_to 'Show', logserver %></td>
        <td><%= link_to 'Edit', edit_logserver_path(logserver) %></td>
        <td><%= link_to 'Destroy', logserver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Logserver', new_logserver_path %>
