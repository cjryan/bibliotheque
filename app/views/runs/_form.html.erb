<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="field">
    <%= f.label :broker %><br>
    <%= f.text_field :broker %>
  </div>
  <div class="field">
    <%= f.label :testrun %><br>
    <%= f.text_field :testrun %>
  </div>
  <div class="field">
    <%= f.label :caseruns %><br>
    <%= f.text_field :caseruns %>
  </div>
  <div class="field">
    <%= f.label :accounts %><br>
    <%= f.text_area :accounts, rows: 12, cols: 50 %>
  </div>
  <div class="field">
    <%= f.label :maxgears %><br>
    <%= f.number_field :maxgears %>
  </div>
  <div class="field">
    <%= f.label :tcms_user %><br>
    <%= f.text_field :tcms_user %>
  </div>
  <div class="field">
    <%= f.label :tcms_password %><br>
    <%= f.password_field :tcms_password %>
  </div>
  <div class="field">
    <%= f.label :rhcbranch_id %><br>
    <%= f.collection_select(:rhcbranch_id, Rhcbranch.all, :id, :name, include_blank: false) %>
  </div>
  <div class="field">
    <%= f.label :brokertype_id %><br>
    <%= f.collection_select(:brokertype_id, Brokertype.all, :id, :name, include_blank: false) %>
  </div>
  <div class="field">
    <%= f.label :accounts_per_job %><br>
    <%= f.number_field :accounts_per_job %>
  </div>
  <div class="field">
    <%= f.label :debug %><br>
    <%= f.check_box :debug %>
  </div>

  <div class="serverlist">
    <%= f.fields_for :rundockerservers do |builder| %>
      <%= render "dockerserver_fields", :f => builder %>
    <% end %>
    <%= link_to_add_dockerserver "Add new docker server", f, :rundockerservers %>
  </div>
  <div class="actions">
    <%= f.submit "Create Run", class: 'btn btn-primary btn-medium' %>
  </div>
</div><!-- end row -->
<% end %>
