<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :broker %><br>
    <%= f.text_field :broker %>
  </div>
  <div class="field">
    <%= f.label :testrun %><br>
    <%= f.number_field :testrun %>
  </div>
  <div class="field">
    <%= f.label :caseruns %><br>
    <%= f.text_field :caseruns %>
  </div>
  <div class="field">
    <%= f.label :accounts %><br>
    <%= f.text_field :accounts %>
  </div>
  <div class="field">
    <%= f.label :maxgears %><br>
    <%= f.number_field :maxgears %>
  </div>
  <div class="field">
    <%= f.label :tcms_user %><br>
    <%= f.text_field :tcms_user %>
  </div>
  <div class="field">
    <%= f.label :tcms_password %><br>
    <%= f.password_field :tcms_password %>
  </div>
  <div class="field">
    <%= f.label :rhcbranch_id %><br>
    <%= f.collection_select(:rhcbranch_id, Rhcbranch.all, :id, :name, include_blank: false) %>
  </div>
  <div class="field">
    <%= f.label :brokertype_id %><br>
    <%= f.collection_select(:brokertype_id, Brokertype.all, :id, :name, include_blank: false) %>
  </div>
  <div class="field">
    <%= f.label :accounts_per_job %><br>
    <%= f.number_field :accounts_per_job %>
  </div>
  <div class="serverlist">
    <%= f.fields_for :rundockerservers do |builder| %>
      <div class="field">
        <%= builder.label :jobcount %>
        <%= builder.number_field :jobcount %>
      </div>
      <div class="field">
        <%= builder.label "Docker server" %><br>
        <%= builder.collection_select(:dockerserver_id, Dockerserver.all, :id, :name, {:prompt => "Select"}, {:onchange => "query_dockerimages(this.value)"}) %>
      </div>
      <div class="field">
        <%= builder.label "Docker image" %><br>
        <%= builder.collection_select(:image_id, [], :image_imageuuid, :tag) %>
      </div>
    <% end %>
  </div>
  <div class="serverlist">
    <%= f.fields_for :runlogservers do |builder| %>
      <div class="field">
        <%= builder.label :logserver_id %><br>
        <%= builder.collection_select(:logserver_id, Logserver.all, :id, :hostname, include_blank: false) %>
      </div>
    <% end %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
